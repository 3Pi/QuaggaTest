{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots" : ["nodeJS/node_modules/@types","app/node_modules/quagga/type-definitions"],
    "skipLibCheck": true,
    "lib": [ "es6", "dom" ],
    "forceConsistentCasingInFileNames": true
  },
  "#compilerOptions": {
    "types": [ "hammerjs" ]
  },
  "exclude": [
    "app/node_modules/**",
    "nodeJS/node_modules/**"
  ]
}